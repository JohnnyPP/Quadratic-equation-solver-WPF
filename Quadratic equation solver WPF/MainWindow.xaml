<Window x:Class="Quadratic_equation_solver_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <StackPanel HorizontalAlignment="Left" Height="52" Margin="10,10,0,0" VerticalAlignment="Top" Width="497">
            <TextBlock TextWrapping="Wrap" Text="The program solves the quadratic equation of the form ax^2+bx+c=0"/>
        </StackPanel>
        <StackPanel HorizontalAlignment="Left" Height="103" Margin="10,62,0,0" VerticalAlignment="Top" Width="497" >
            <TextBox Height="24" Name="TextBox_input" Text="TextBox"/>
            <Button Content="Calculate" Name="Button_calculate" HorizontalAlignment="Left" VerticalAlignment="Top" Width="497" Click="Button_calculate_Click"/>
            <Label Content="Results" Name="Label_results"/>
        </StackPanel>


    </Grid>
</Window>
